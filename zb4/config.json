{
  "name": "RACKSYNC ZB #3",
  "version": "1.32.1-1",
  "slug": "racksync-multipoint-zigbee-3",
  "description": "Run multipoint Zigbee2MQTT Coordinator separately from an Official",
  "uart": true,
  "url": "https://github.com/racksync/hass-addons-multipoint-zigbee",
  "startup": "application",
  "services": [
    "mqtt:need"
  ],
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "boot": "auto",
  "init": false,
  "ingress": true,
  "timeout": 30,
  "panel_icon": "mdi:numeric-3-circle",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "ports": {
    "8485/tcp": 8487,
    "8099/tcp": null
  },
  "ports_description": {
    "8485/tcp": "Socat tcp-listen port",
    "8099/tcp": "Frontend tcp-listen port"
  },
  "options": {
    "data_path": "/config/racksync_z2m_3",
    "socat": {
      "enabled": false,
      "master": "pty,raw,echo=0,link=/tmp/ttyZ2M,mode=777",
      "slave": "tcp-listen:8485,keepalive,nodelay,reuseaddr,keepidle=1,keepintvl=1,keepcnt=5",
      "options": "-d -d",
      "log": false
    },
    "mqtt": { 
      "base_topic": "racksync_z2m_3" 
    },
    "serial": {}
  },
  "schema": {
    "zigbee_herdsman_debug": "bool?",
    "data_path": "str",
    "socat": {
      "enabled": "bool?",
      "master": "str?",
      "slave": "str?",
      "options": "str?",
      "log": "bool?"
    },
    "mqtt": {
      "server": "str?",
      "ca": "str?",
      "key": "str?",
      "cert": "str?",
      "user": "str?",
      "password": "str?"
    },
    "serial": {
      "port": "str?",
      "adapter": "match(zstack|deconz|zigate|ezsp)?",
      "baudrate": "int?",
      "rtscts": "bool?"
    }
  },
  "image": "zigbee2mqtt/zigbee2mqtt-edge-{arch}"
}
